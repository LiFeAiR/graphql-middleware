{
    "name": "stefanorg/graphql-middleware",
    "type": "library",
    "description": "GraphQL Middleware for container interop",
    "homepage": "https://github.com/stefanorg/graphql-middleware",
    "license" : "BSD-3-Clause",
    "authors": [
    	{
	    "name": "Stefano Corallo",
	    "homepage": "http://stefanorg.github.io/"
	}
    ],
    "require": {
        "php": "^7.0",
        "container-interop/container-interop": "^1.1",
        "zendframework/zend-diactoros": "^1.3",
        "youshido/graphql": "v1.4.2.1"
    },
    "autoload": {
        "psr-4": {
            "GraphQLMiddleware\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.5"
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQLMiddlewareTest\\": "test/"
        }
    }
}
